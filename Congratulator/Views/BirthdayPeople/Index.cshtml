<hr>
@{
    int i = 0;
    foreach (var person in Model.birthdayPersons)
    {
        string day, month;
        if (person.dayBirth < 10)
        {
            day = "0" + person.dayBirth;
        }
        else
        {
            day = Convert.ToString(person.dayBirth);
        }
        if (person.monthBirth < 10)
        {
            month = "0" + person.monthBirth;
        }
        else
        {
            month = Convert.ToString(person.monthBirth);
        }
        <div class="row">
            <div class="col-md-7">
                <h2>@person.name</h2>
                <p class="lead">Date: @day.@month</p>
                <p class="lead">Category: @person.category</p>
            </div>
            <div class="col-md-5">
                <img class="img-fluid mx-auto" alt="300x300" style="width: 300px; height: 300px;" src="@person.urlImg" data-holder-rendered="true">
            </div>
        </div>
        <hr>
        i++;
    }
}
