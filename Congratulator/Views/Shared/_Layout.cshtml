<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @if (ViewBag.Title != null)
    {
        <title>@ViewBag.Title</title>
    }
    else
    {
        <title>@Config.MyName</title>
    }
    <link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/form.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/Home/Index">Home</a>
                <a class="nav-item nav-link" href="/AllBirthdays/Index">All birthdays</a>
                <a class="nav-item nav-link" href="/BirthdayPeople/Index">Birthday people</a>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
